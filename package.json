{
  "name": "snapit",
  "private": true,
  "version": "0.0.0-alpha.1",
  "description": "Create a snapshot release of the current changes for a changeset with a comment in a PR",
  "scripts": {
    "lint": "prettier --check .",
    "format": "prettier '.' --write"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "prettier": "^3.1.0"
  },
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/snapit.git"
  },
  "keywords": [
    "actions",
    "changesets",
    "snapshot",
    "snapit"
  ],
  "author": "Shopify",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "all"
